{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=demo;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    // 1. 設定最低紀錄等級
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // 避免 Microsoft 內建太多雜訊
        "System": "Warning"
      }
    },
    // 2. Enrich: 增強日誌內容
    "Enrich": [
      "FromLogContext", // 支援 log 內動態加 context（例：RequestId、UserId）
      "WithMachineName", // 紀錄目前伺服器/主機名稱
      "WithThreadId" // 紀錄 Thread Id，方便除錯 threading 問題
    ],
    // 3. WriteTo: 寫入多個目的地
    "WriteTo": [
      {
        "Name": "Console" // 開發階段直接輸出到 Console
      },
      {
        "Name": "File", // 產線建議用 JSON 格式檔案
        "Args": {
          "path": "logs/log-.json", // 每日一檔
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "retainedFileCountLimit": 31 // 保留 31 天，依需求可調
        }
      }
    ],
    // 4. 可選：加入 Exception 詳細堆疊追蹤（建議打開）
    "Properties": {
      "Application": "Demo"
    }
  },
  "Jwt": {
    "Key": "ThisIsAVerySecureSecretKeyForYourJWTTokenValidationThatIsAtLeast32BytesLong", // 秘密金鑰
    "Issuer": "YourAppIssuer", // 發行者 (例如您的應用程式名稱或網域)
    "Audience": "YourApiClient" // 受眾 (例如您的前端應用程式名稱或網域)
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "localhost;127.0.0.1"
}
